<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/FrameLayout_Main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:foreground="#000000"
    tools:context=".MainMenuActivity" >

    <LinearLayout android:id="@+id/LinearLayout_Menu" 
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@drawable/menu_bg" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/menu_logo" />
    
        <Button android:id="@+id/Button_StartGame"
            android:text="Start Game"
            android:textColor="#FFFF00"
            android:layout_marginTop="30dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />
        <Button android:id="@+id/Button_BossBattle"
            android:text="Boss Battle"
            android:textColor="#FFFF00"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />
        <Button android:id="@+id/Button_Leaderboard"
            android:text="Leaderboard"
            android:textColor="#FFFF00"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />
        <Button android:id="@+id/Button_Settings"
            android:text="Settings"
            android:textColor="#FFFF00"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />
        <Button android:id="@+id/Button_How_To_Play"
            android:text="How to Play"
            android:textColor="#FFFF00"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />
        <Button android:id="@+id/Button_About"
            android:text="About"
            android:textColor="#FFFF00"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
</FrameLayout>
