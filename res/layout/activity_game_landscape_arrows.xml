<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity" >

    <LinearLayout android:id="@+id/LinearLayout_Main"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <RelativeLayout android:id="@+id/RelativeLayout_Controls_StatusBar"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:padding="2dp"
        android:background="#000000" >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true" >

            <ImageButton
                android:id="@+id/ImageButton_MoveLeft"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:padding="5dp"
                android:background="@drawable/control_button"
                android:src="@drawable/icon_arrow_left" />

            <ImageButton
                android:id="@+id/ImageButton_MoveUp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:padding="5dp"
                android:background="@drawable/control_button"
                android:src="@drawable/icon_arrow_up" />

            <ImageButton
                android:id="@+id/ImageButton_Guard"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:padding="5dp"
                android:background="@drawable/control_button"
                android:src="@drawable/icon_shield" />

        </LinearLayout>
    
        <LinearLayout android:id="@+id/LinearLayout_Status"     
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:layout_width="fill_parent"
                android:layout_height="80dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true" >

            <ImageButton
                android:id="@+id/ImageButton_Attack"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:padding="5dp"
                android:background="@drawable/control_button"
                android:src="@drawable/icon_attack" />

            <ImageButton
                android:id="@+id/ImageButton_MoveDown"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:padding="5dp"
                android:background="@drawable/control_button"
                android:src="@drawable/icon_arrow_down" />

            <ImageButton
                android:id="@+id/ImageButton_MoveRight"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:padding="5dp"
                android:background="@drawable/control_button"
                android:src="@drawable/icon_arrow_right" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>