<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity" >
    
    <LinearLayout android:id="@+id/LinearLayout_Main"
        android:orientation="vertical"
        android:layout_gravity="top"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <RelativeLayout
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:padding="2dp"
        android:background="#000000" >

        <ImageButton android:id="@+id/ImageButton_Guard"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:padding="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/control_button"
            android:src="@drawable/icon_shield" />

        <LinearLayout android:id="@+id/LinearLayout_Status"     
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_width="fill_parent"
            android:layout_height="90dp" />

        <ImageButton
            android:id="@+id/ImageButton_Attack"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:padding="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/control_button"
            android:src="@drawable/icon_attack" />

    </RelativeLayout>
    
</LinearLayout>