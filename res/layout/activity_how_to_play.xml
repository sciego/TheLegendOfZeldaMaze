<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HowToPlayActivity" >

    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mainlayout_background"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <LinearLayout android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <Button
                android:id="@+id/Button_Back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Home"
                android:layout_gravity="left"
                android:background="@drawable/maze_button" />
            <TextView android:text="HOW TO PLAY"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:textColor="@color/title"
                android:textSize="20dp"
                android:shadowColor="#000000"
                android:shadowRadius="2"
                android:shadowDx="1"
                android:shadowDy="1" />
        </LinearLayout>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="10dp"
            android:background="@color/childlayout_background" >
        
            <LinearLayout android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp" >

                <TextView
                    android:text="Welcome to the land of Hyrule, you have entered in a dangerous maze which you need to go through in order to... have fun.\n\n"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="To finish the game you need to collect all the Rupees that are located all over the maze, some of them are hidden in bushes that you can cut by using your sword."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/imageview_border"
                    android:src="@drawable/htp_bush_rupee" />

                <TextView
                    android:text="\nThere are bridges to cross and Dekus to be aware of, after collecting all Rupees, an evil Moblin will appear near the start point."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/imageview_border"
                    android:src="@drawable/htp_moblin" />
                
                <TextView
                    android:text="\nAfter defeating him a magic exit will appear at the bottom, reach it and you are a hero!"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/imageview_border"
                    android:src="@drawable/htp_exit" />

                <TextView
                    android:text="\nTo play just choose one of the available control types: Accelerometer and Full-touchscreem, in both you need to use a button to attack and another to use the shield. The accelerometer type controls allow you to move with your device's sensor."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/imageview_border"
                    android:src="@drawable/htp_fight" />
                
                <TextView
                    android:text="\nTo guard from enemy's attacks, just press and hold the Guard button. Have in mind that you need to face the same direction that the attack is coming from."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/imageview_border"
                    android:src="@drawable/htp_guard" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</RelativeLayout>
